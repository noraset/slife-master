<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".ui.login.LoginFragment">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/logo_text" />

        <EditText
            android:id="@+id/txtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/username_icon"
            android:drawablePadding="20dp"
            android:fontFamily="@font/sukhumvit"
            android:hint="Username"
            android:includeFontPadding="false"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/primary"
            android:textColorLink="@color/primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/password_icon"
                android:drawablePadding="20dp"
                android:fontFamily="@font/sukhumvit"
                android:hint="Password"
                android:includeFontPadding="false"
                android:inputType="textPassword"
                android:paddingBottom="15dp"
                android:paddingLeft="13dp"
                android:singleLine="true"
                android:textColor="@color/primary" />

            <Button
                android:id="@+id/btnForgotPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="-28dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/question_icon" />

        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_primary_btn"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_facebook_btn"
            android:drawableLeft="@drawable/facebook_icon"
            android:drawablePadding="-30dp"
            android:paddingLeft="30dp"
            android:text="FACEBOOK LOGIN"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_white_btn"
            android:drawableLeft="@drawable/register_icon"
            android:drawablePadding="-50dp"
            android:paddingLeft="30dp"
            android:text="REGISTER"
            android:textColor="@color/gold"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>